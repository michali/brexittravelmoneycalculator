{
    "version": "0.1.0",
    "command": "sh",
    "args": ["-c"],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "dotnet-build",
            "args": ["dotnet build", "${workspaceRoot}/project.json"],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "tsc",
            "args": ["tsc", "--target", "ES5",
            "--sourceMap",
            "--watch"]
        }
    ]
}